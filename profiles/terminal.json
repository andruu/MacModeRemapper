{
  "name": "Terminal (conservative)",
  "processNames": ["windowsterminal", "powershell", "cmd", "wt", "pwsh"],
  "mappings": [
    { "trigger": "Alt+Shift+C", "action": "Ctrl+Shift+C" },
    { "trigger": "Alt+Shift+V", "action": "Ctrl+Shift+V" },
    { "trigger": "Alt+A", "action": "Ctrl+A" },
    { "trigger": "Alt+Z", "action": "Ctrl+Z" },
    { "trigger": "Alt+F", "action": "Ctrl+F" },
    { "trigger": "Alt+Q", "action": "Alt+F4" },

    { "trigger": "Alt+Left", "action": "Home" },
    { "trigger": "Alt+Right", "action": "End" },
    { "trigger": "Alt+Backspace", "action": "Ctrl+Backspace" }
  ]
}
